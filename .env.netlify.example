# Netlify Production Environment Variables
# Set these variables in Netlify Dashboard > Site Settings > Environment Variables

# =============================================================================
# CORE CONFIGURATION (REQUIRED)
# =============================================================================

NODE_ENV=production
NETLIFY=true
PRODUCTION_DOMAIN=satnam.pub
SECURE_COOKIE_DOMAIN=.satnam.pub

# =============================================================================
# NIP-07 AUTHENTICATION SETTINGS
# =============================================================================

MAX_CHALLENGE_REQUESTS=30
MAX_AUTH_REQUESTS=20
RATE_LIMIT_WINDOW_MINUTES=15
SESSION_EXPIRY_HOURS=24
CHALLENGE_EXPIRY_MINUTES=10

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://satnam.pub,https://www.satnam.pub,https://app.satnam.pub

# =============================================================================
# SECURITY ENHANCEMENTS (Optional)
# =============================================================================

ENABLE_AUTH_LOGGING=true
LOG_LEVEL=info
CSP_POLICY=default-src 'none'
HSTS_MAX_AGE=31536000